{
    "manifest_version": 3,
    "name": "ASKDADDY Chatbot",
    "version": "1.0",
    "description": "Talk to Almighty Daddy for wisdom and guidance!",
    "permissions": ["storage", "activeTab"],
    "host_permissions": ["http://localhost:8080/"],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}
